{
  "manifest_version": 2,

  "name": "PRIVACY METER",
  "description": "This extension measure the security score of the current website",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
	"default_title": "Security Details"
  },
  
  "background": {
	"scripts": [
		"js/background.js"
	]
  },
  
  "permissions": [
    "tabs",
    "<all_urls>"
  ]
}
